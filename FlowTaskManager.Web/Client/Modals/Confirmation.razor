@inherits ConfirmationBase
@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button @onclick="() => Action(false)" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Content</p>
                </div>
                <div class="modal-footer">
                    <button @onclick="() => Action(true)" type="button" class="btn btn-danger">@ActionButton</button>
                    <button @onclick="() => Action(false)" type="button" class="btn btn-secondary" data-dismiss="modal">@CancelButton</button>
                </div>
            </div>
        </div>
    </div>
}
