@inherits DisplayTaskBase

<div class="card text-center mb-5 border border-dark rounded">
    <div class="card-header bg-info text-white">
        <div class="row align-items-center">
            <div class="col-3">
                <div class="row align-items-center">
                    <img src="@($"Images/{Task.Type.ToString().ToLower()}.jpg")" class="card-img-top task-type-card-image img-fluid img-thumbnail float-left" />
                    <p class="mb-0">@Task.Type</p>
                </div>
            </div>
            <div class="col-6">
                <h5 class="card-title mb-0 task-title">@Task.Title</h5>
            </div>
            <div class="col-3">
                <div class="row">
                    <div class="col">
                        <button class="btn btn-warning btn-block">
                            Edit
                        </button>
                    </div>
                    <div class="col">
                        <button @onclick="ClickDelete" class="btn btn-danger btn-block">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card-body">
        <p class="card-text">@Task.Content</p>
    </div>
    <div class="card-footer text-muted">
        By: @Task.User.UserName
    </div>
</div>
