@page "/tasks/{ActualPage}/page"
@inherits TaskListBase

<h4 class="task-title font-weight-bold text-center">Tasks</h4>

<div class="row mx-0 my-3">
    <button @onclick="ClickCreateTask" class="btn btn-success">
        <span class="oi oi-plus" aria-hidden="true"></span>
        Create Task
    </button>
</div>

@if (Tasks != null)
{
    foreach (var task in Tasks)
    {
        <DisplayTask TaskDeletion="TaskDeleted" Task="task"></DisplayTask>
    }

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li @onclick="@(() => MovePage("prev"))" class="page-item"><button disabled="@(1 == int.Parse(ActualPage))" class="page-link" href="#">Previous</button></li>
            <li class="page-item"><p class="page-link bg-warning">Actual Page : @(ActualPage)</p></li>
            <li @onclick="@(() => MovePage("next"))" class="page-item"><button disabled="@(LastPage == int.Parse(ActualPage))" class="page-link" href="#">Next</button></li>
        </ul>
    </nav>
}
